<script>


    $('.carousel .carousel-item').each(function () {
        var minPerSlide = 6;
        var next = $(this).next();
        if (!next.length) {
            next = $(this).siblings(':first');
        }
        next.children(':first-child').clone().appendTo($(this));

        for (var i = 0; i < minPerSlide; i++) {
            next = next.next();
            if (!next.length) {
                next = $(this).siblings(':first');
            }

            next.children(':first-child').clone().appendTo($(this));
        }
    });
    $(".item_feed_carousel").click(function () {
        $(".item_feed_carousel").removeClass("bg-[#FEED00]");
        $(this).addClass("bg-[#FEED00]");
    });
</script>